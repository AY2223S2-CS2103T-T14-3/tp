<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="cardPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
         <children>
            <VBox alignment="CENTER_LEFT" GridPane.columnIndex="0">
               <padding>
                  <Insets bottom="5" left="15" right="5" top="5" />
               </padding>
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="51.0" spacing="5">
                     <children>
                        <Label fx:id="companyName" styleClass="whiteCompanyNameLabel" text="\$first">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" top="30.0" />
                           </HBox.margin></Label>
                     </children>
                  </HBox>
                  <FlowPane fx:id="tags">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin></FlowPane>
                  <Label fx:id="role" styleClass="whiteLabel" text="\$role">
                     <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </VBox.margin></Label>
                  <Label fx:id="date" styleClass="whiteLabel" text="\$date">
                     <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </VBox.margin></Label>
               </children>
            </VBox>
            <VBox alignment="TOP_RIGHT" prefHeight="102.0" prefWidth="130.0" GridPane.columnIndex="1">
               <children>
                  <Label fx:id="statusLabel" alignment="TOP_RIGHT" styleClass="whiteText" text="\$status">
                     <VBox.margin>
                        <Insets right="40.0" top="30.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </children>
      </GridPane>
      <VBox>
         <children>
            <Label styleClass="whiteCompanyNameLabel" text="Tips:" />
            <Label fx:id="tips" styleClass="whiteLabel" text="\$tips">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
         </children>
         <padding>
            <Insets bottom="5.0" left="15.0" right="5.0" top="5.0" />
         </padding>
         <VBox.margin>
            <Insets left="10.0" top="30.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="CENTER">
         <children>
            <ImageView fx:id="tipsImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
