@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor LOGIC_COLOR_T4
skinparam classBackgroundColor LOGIC_COLOR

package Logic {

Class InternBuddyParser
Class XYZCommand
Class CommandResult
Class "{abstract}\nCommand" as Command
Class LogicManager
Class "<<interface>>\nLogic" as LogicInterface
}

package Model{
Class HiddenModel #FFFFFF
}

package Storage{
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> LogicInterface

LogicManager .left.|> LogicInterface
LogicManager -left->"1" InternBuddyParser
InternBuddyParser ..> XYZCommand : creates >

XYZCommand -up-|> Command
LogicManager .right.> Command : executes >

LogicManager --> Model
LogicManager --> Storage
Storage --[hidden] Model
'Command .[hidden]up.> Storage
Command .right.> Model
note right of XYZCommand: XYZCommand = AddCommand, \nFindCommand, etc

LogicInterface ..> CommandResult
LogicManager .down.> CommandResult
Command .up.> CommandResult : produces >
@enduml
